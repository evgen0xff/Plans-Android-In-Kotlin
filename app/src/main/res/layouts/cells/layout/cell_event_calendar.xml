<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="0dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingStart="0dp"
        android:paddingEnd="16dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDayOfEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Small"
                android:textColor="@color/gray_2"
                android:maxLines="1"
                android:text="Day 1/6"/>
            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Small"
                android:textColor="@color/gray_2"
                android:maxLines="1"
                android:text="11:00 PM"/>
            <TextView
                android:id="@+id/tvDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                style="@style/Plans.Text.Label.Small"
                android:textColor="@color/gray_2"
                android:maxLines="1"
                android:text="-"/>
            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                style="@style/Plans.Text.Label.Small"
                android:textColor="@color/gray_2"
                android:maxLines="1"
                android:text="12:00 PM"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Medium2.Bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Outdoor Music Concert + Fireworks show!"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_pin_map_green"/>
            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/Plans.Text.Label.Medium2"
                android:text="1000 S River Rd, Templeton, CA 93465, USA"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewBottomSpace"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_opacity20"/>
</LinearLayout>