<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/layout_invitations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="16dp"
        android:layout_centerInParent="true"
        android:visibility="invisible">
        <TextView
            android:id="@+id/tv_invitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            style="@style/Plans.Text.Label.Large2.Bold"
            android:text="Event invitations"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:id="@+id/layoutUser3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@id/layoutUser2"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:visibility="visible">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bkgnd_white_corner22" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imvUser3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_placeholder" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutUser2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@id/layoutUser1"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:visibility="visible">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bkgnd_white_corner22" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imvUser2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_placeholder" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutUser1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:visibility="visible">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bkgnd_white_corner22" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imvUser1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_placeholder" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_invitationsMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                style="@style/Plans.Text.Label.Medium2"
                android:text="Don Ken, Frank Rot and 2 others sent you a friend request."/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_invitationsEventFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:gravity="center_vertical"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/layout_invitationsEvent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_invitationsEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Large2.Bold"
                android:text="Event invitations"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imv_invitationsEvent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_user_placeholder" />
                <TextView
                    android:id="@+id/tv_countEventInvite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/imv_invitationsEvent"
                    android:layout_alignEnd="@id/imv_invitationsEvent"
                    android:layout_marginEnd="-5dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="1dp"
                    style="@style/Plans.Text.Label.Small.White"
                    android:background="@drawable/bkgnd_teal_corner10"
                    android:text="1"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/gray_opacity20"/>
        <LinearLayout
            android:id="@+id/layout_invitationsFriend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_invitationsFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Large2.Bold"
                android:text="Friend Requests"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imv_invitationsFriend"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_user_placeholder" />
                <TextView
                    android:id="@+id/tv_countFriendInvite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/imv_invitationsFriend"
                    android:layout_alignEnd="@id/imv_invitationsFriend"
                    android:layout_marginEnd="-5dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="1dp"
                    style="@style/Plans.Text.Label.Small.White"
                    android:background="@drawable/bkgnd_teal_corner10"
                    android:text="1"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>