<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="67dp"
    android:paddingEnd="16dp"
    android:orientation="vertical"
    android:gravity="end">
    <LinearLayout
        android:id="@+id/layout_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:paddingVertical="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:background="@drawable/bkgnd_teal_corner20"
        android:gravity="end">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:maxWidth="230dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            style="@style/Plans.Text.Label.Medium2.White"
            android:lineSpacingExtra="3dp"
            android:autoLink="web"
            android:textColorLink="@color/white"
            android:text="Message"/>
        <TextView
            android:id="@+id/tv_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Plans.Text.Label.Small"
            android:textColor="@color/gray_2"
            android:singleLine="true"
            android:text="00:00 AM"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_sending"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_send_teal_small"/>

</LinearLayout>