<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_userImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_placeholder"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvEventName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        style="@style/Plans.Text.Label.Medium2.Bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="Outdoor Music Concert + Fireworks show!"/>
                    <TextView
                        android:id="@+id/tv_agoTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        style="@style/Plans.Text.Label.Small"
                        android:textColor="@color/gray_2"
                        android:text="Now"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvOrganizedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Plans.Text.Label.Small"
                    android:textColor="@color/gray_2"
                    android:text="Organized by Adnan Kharuf "/>
                <LinearLayout
                    android:id="@+id/layoutDate"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_calendar_green"/>
                    <TextView
                        android:id="@+id/tvEventDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        style="@style/Plans.Text.Label.Medium2"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="Fir, Jan 6 at 4PM - Mon, Nov 30 at 11:29 PM"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_opacity20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginVertical="6dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/btn_going"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/imv_going"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_check_circle_purple"/>
            <TextView
                android:id="@+id/tv_going"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/Plans.Text.Label.Medium2"
                android:textColor="@color/purple_main"
                android:text="GOING"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_opacity20"/>
        <LinearLayout
            android:id="@+id/btn_maybe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/imv_maybe"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_clock_black"/>
            <TextView
                android:id="@+id/tv_maybe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/Plans.Text.Label.Medium2"
                android:text="MAYBE"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_opacity20"/>
        <LinearLayout
            android:id="@+id/btn_nextTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/imv_nextTime"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_x_circle_black"/>
            <TextView
                android:id="@+id/tv_nextTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/Plans.Text.Label.Medium2"
                android:text="NEXT TIME"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/separator_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_opacity20"/>
</LinearLayout>