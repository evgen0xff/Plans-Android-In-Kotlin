<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@color/gray_opacity20"/>
        <LinearLayout
            android:id="@+id/layout_content"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/layoutYourHere"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/imgvYourHere"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_circle_green"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvYourHere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Medium2"
                        android:gravity="center"
                        android:textColor="@color/teal_main"
                        android:text="YOU'RE HERE"/>
                    <ImageView
                        android:id="@+id/imgvDownArrowHere"
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_arrow_down_short_green"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutEdit"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/imgvEdit"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pencil_black"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/tvEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    style="@style/Plans.Text.Label.Medium2"
                    android:gravity="center"
                    android:text="EDIT"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutGuestAction"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/imgvGuestAction"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_circle_green"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:id="@+id/tvGuestAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Medium2"
                        android:gravity="center"
                        android:textColor="@color/teal_main"
                        android:text="GOING"/>
                    <ImageView
                        android:id="@+id/imgvDownArrow"
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="3dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_arrow_down_short_green"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutInvite"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/imgvInvite"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_plus_black"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/tvInvite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    style="@style/Plans.Text.Label.Medium2"
                    android:gravity="center"
                    android:text="INVITE"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutDetails"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/imgvDetails"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_file_black"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:id="@+id/tvDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        style="@style/Plans.Text.Label.Medium2"
                        android:gravity="center"
                        android:text="DETAILS"/>
                </LinearLayout>
                <View
                    android:id="@+id/viewDetailsSeparator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutChat"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgvChat"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_black"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:id="@+id/tvUnreadMsgCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/imgvChat"
                        android:layout_marginStart="15dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/bkgnd_teal_corner9"
                        style="@style/Plans.Text.Label.Small.White"
                        android:gravity="center"
                        android:text="1"/>

                </RelativeLayout>
                <TextView
                    android:id="@+id/tvChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    style="@style/Plans.Text.Label.Medium2"
                    android:gravity="center"
                    android:text="CHAT"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/viewBottomSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/gray_opacity20"/>

    <ImageView
        android:id="@+id/imv_guideChatWithGuests"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:src="@drawable/im_chat_event_guests_now"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

</LinearLayout>