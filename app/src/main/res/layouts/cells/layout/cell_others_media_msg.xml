<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="62dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="bottom">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_user_placeholder"/>
        <LinearLayout
            android:id="@+id/layout_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bkgnd_white_corner20">
            <LinearLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Plans.Text.Label.Medium2.Bold"
                    android:text="User Name"/>
                <TextView
                    android:id="@+id/tv_createAt_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/Plans.Text.Label.Small"
                    android:textColor="@color/gray_2"
                    android:text="24:00 AM"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <!-- Media Content -->
                    <RelativeLayout
                        android:id="@+id/layoutMedia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imvCoverImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                        <com.planscollective.plansapp.customUI.PlansVideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/layout_createAt_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="@color/black_opacity70">
                            <TextView
                                android:id="@+id/tv_createAt_bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="8dp"
                                style="@style/Plans.Text.Label.Small.White"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="11:18 AM"/>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>