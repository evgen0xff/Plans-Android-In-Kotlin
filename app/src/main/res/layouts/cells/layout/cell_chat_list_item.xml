<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="16dp"
            android:layout_marginVertical="6dp"
            android:gravity="center_vertical">
            <RelativeLayout
                android:id="@+id/layout_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:visibility="visible">
                <RelativeLayout
                    android:id="@+id/layoutUser2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignStart="@id/layoutUser1"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:visibility="visible">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bkgnd_white_corner22" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imvUser2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_placeholder" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutUser1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:visibility="visible">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bkgnd_white_corner22" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imvUser1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_placeholder" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="2dp"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Large2.Bold"
                        android:text="Event Name"
                        android:singleLine="true" />
                    <TextView
                        android:id="@+id/tv_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        style="@style/Plans.Text.Label.Large2.Bold"
                        android:text="â€¢"/>
                    <ImageView
                        android:id="@+id/imv_markLive"
                        android:layout_width="40dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_live_small"/>
                    <TextView
                        android:id="@+id/tv_live"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        style="@style/Plans.Text.Label.Small"
                        android:textColor="@color/pink"
                        android:text="12:55 PM"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        style="@style/Plans.Text.Label.Small"
                        android:gravity="end"
                        android:textColor="@color/gray_2"
                        android:text="Now"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_lastMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Medium2"
                        android:text="John Doe: Message"
                        android:singleLine="true" />
                    <LinearLayout
                        android:id="@+id/layout_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_camera_black_small"/>
                        <TextView
                            android:id="@+id/tv_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            style="@style/Plans.Text.Label.Medium2"
                            android:text="Photo"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_video_black_small"/>
                        <TextView
                            android:id="@+id/tv_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            style="@style/Plans.Text.Label.Medium2"
                            android:text="Video"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/imv_mute"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_bell_off_grey"/>
                    <TextView
                        android:id="@+id/tv_unreadCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        style="@style/Plans.Text.Label.Small.White"
                        android:background="@drawable/bkgnd_teal_corner10"
                        android:text="1"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/separator_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray_opacity20"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imv_guideTapHoldChat"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/im_guide_tap_hold_chat" />

</RelativeLayout>

