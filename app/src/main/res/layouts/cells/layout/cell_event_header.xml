<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="0dp"
    android:paddingStart="13dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false">
        <RelativeLayout
            android:id="@+id/btn_userImage"
            android:layout_width="46dp"
            android:layout_height="46dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_userImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:src="@drawable/ic_user_placeholder"/>
            <ImageView
                android:id="@+id/imv_lingLive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_ling_live"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Medium2.Bold"
                android:text="John Done"
                android:maxLines="1"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="bottom">
                <ImageView
                    android:id="@+id/imv_publicPrivate"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3.5dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_private_green_3x"/>
                <TextView
                    android:id="@+id/tv_createdAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/Plans.Text.Label.Small"
                    android:textColor="@color/gray_2"
                    android:text="Private"
                    android:ellipsize="end"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/btn_join"
            android:layout_width="68dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            style="@style/Plans.Button.Active.Purple2"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="JOIN"/>
        <TextView
            android:id="@+id/btn_unjoin"
            android:layout_width="89dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            style="@style/Plans.Button.Inactive2"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="UNJOIN"/>

        <LinearLayout
            android:id="@+id/btn_menu"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="8dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_dots_3_grey"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingStart="3dp"
        android:paddingEnd="0dp">
        <TextView
            android:id="@+id/tv_eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Plans.Text.Label.Large2.Bold"
            android:lineSpacingExtra="3dp"
            android:ellipsize="end"
            android:text="Outdoor Music Concert"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_eventCaption"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingStart="3dp"
        android:paddingEnd="0dp">
        <com.planscollective.plansapp.customUI.ReadMoreTextView
            android:id="@+id/tv_eventCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            style="@style/Plans.Text.Label.Medium2"
            android:maxLines="3"
            android:autoLink="web"
            android:textColorLink="@color/purple_opacity54"
            android:lineSpacingExtra="3dp"
            android:text="Outdoor Music Concert"
            app:trimCollapsedText="@string/see_more"
            app:colorClickableText="@color/gray_see_more"
            app:trimLines="3"
            app:showTrimExpandedText="false"
            app:enableExpand="false"
            app:trimMode="trimModeLine"/>
    </LinearLayout>

    <View
        android:id="@+id/viewBottomSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_opacity20"/>

</LinearLayout>