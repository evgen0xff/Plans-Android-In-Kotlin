<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="62dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="bottom">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_user_placeholder"/>
        <LinearLayout
            android:id="@+id/layout_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/bkgnd_white_corner20">
            <LinearLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Plans.Text.Label.Medium2.Bold"
                    android:text="User Name"/>
                <TextView
                    android:id="@+id/tv_createAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/Plans.Text.Label.Small"
                    android:textColor="@color/gray_2"
                    android:text="24:00 AM"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Medium2"
                android:lineSpacingExtra="3dp"
                android:autoLink="web"
                android:textColorLink="@color/purple_opacity54"
                android:text="Message"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>