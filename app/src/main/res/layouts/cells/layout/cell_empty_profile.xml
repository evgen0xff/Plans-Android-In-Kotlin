<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imv_mark"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_lock_grey"/>
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Plans.Text.Label.Large"
                android:gravity="center"
                android:text="Make Plans.\nGo Places"
                android:textColor="@color/gray_see_more" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/btnCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Plans.Button.Active.Teal.Border2"
            android:text="CREATE EVENT"/>
    </LinearLayout>
</LinearLayout>