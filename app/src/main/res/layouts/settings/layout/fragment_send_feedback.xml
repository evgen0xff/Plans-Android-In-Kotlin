<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.planscollective.plansapp.models.viewModels.SendFeedbackVM" />
    </data>

    <com.planscollective.plansapp.customUI.PlansInsetsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        tools:context=".fragment.settings.SendFeedbackFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background">
            <View
                android:id="@+id/statusBar"
                android:tag="status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBar_height"/>
            <!-- TopBar -->
            <LinearLayout
                android:id="@+id/layoutTopBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBar_height"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/btnBack"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_back_white"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Plans.TitleBar.Text.White"
                    android:text='@{viewModel.type.title}'/>
                <LinearLayout
                    android:id="@+id/btn_send"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Medium2.White"
                        android:text='SEND'/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="16dp"
                        style="@style/Plans.Text.Label.Medium2"
                        android:gravity="center"
                        android:text="Let us know if you have any comments, questions or suggestions."/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Feedback"
                        app:inputTypePlans="textMultiLine|textCapSentences"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="345dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="32dp"
                        app:cardCornerRadius="10dp">
                        <RelativeLayout
                            android:id="@+id/layout_screenshotEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gray_loading">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_camera_grey"/>
                            <RelativeLayout
                                android:id="@+id/layout_screenshot"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true">
                                <ImageView
                                    android:id="@+id/imv_screenshot"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"/>
                                <ImageView
                                    android:id="@+id/btn_cancelScreenshot"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="6dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="6dp"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_x_circle_black_opacity"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/btn_addScreenshot"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginBottom="32dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingHorizontal="24dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_bkgnd_purple"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_addScreenshot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Plans.Text.Label.Medium2.White"
                            android:text='ADD SCREENSHOT'/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </com.planscollective.plansapp.customUI.PlansInsetsLinearLayout>
</layout>
