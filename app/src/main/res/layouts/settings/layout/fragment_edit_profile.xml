<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.planscollective.plansapp.models.viewModels.EditProfileVM" />
    </data>

    <com.planscollective.plansapp.customUI.PlansInsetsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        tools:context=".fragment.settings.EditProfileFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background">
            <View
                android:id="@+id/statusBar"
                android:tag="status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBar_height"/>
            <!-- TopBar -->
            <LinearLayout
                android:id="@+id/layoutTopBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBar_height"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/btnBack"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_back_white"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Plans.TitleBar.Text.White"
                    android:text='Edit Profile'/>
                <LinearLayout
                    android:id="@+id/btnSave"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Medium2.White"
                        android:text='SAVE'/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/btn_userImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="24dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imv_userImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_user_placeholder"/>
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignEnd="@id/imv_userImage"
                            android:layout_alignBottom="@id/imv_userImage"
                            android:src="@drawable/ic_pencil_circle_green"/>
                    </RelativeLayout>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="First Name"/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="22dp"
                        app:hintText="Last Name"/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Bio"
                        app:inputTypePlans="textMultiLine|textCapSentences"/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="22dp"
                        app:hintText="Email"
                        app:isFocusableForEdit="false"/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="22dp"
                        app:hintText="Phone Number"
                        app:isFocusableForEdit="false"/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="100dp"
                        app:hintText="Location"
                        app:isFocusableForEdit="false"
                        app:inputTypePlans="textMultiLine|textCapSentences"/>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </com.planscollective.plansapp.customUI.PlansInsetsLinearLayout>
</layout>
