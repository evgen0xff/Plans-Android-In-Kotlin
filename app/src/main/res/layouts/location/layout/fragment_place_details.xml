<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.planscollective.plansapp.models.viewModels.PlaceDetailsVM" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background"
        tools:context=".fragment.location.PlaceDetailsFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/layout_eventCover"
                    android:layout_width="match_parent"
                    android:layout_height="304dp"
                    android:background="@drawable/bkgnd_gray_loading">
                    <LinearLayout
                        android:id="@+id/layout_imageNotAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_picture_grey"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            style="@style/Plans.Text.Label.Large2"
                            android:textColor="@color/gray_see_more"
                            android:text="Image not available"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imv_placeCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:scaleType="centerCrop" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_placeName"
                        android:layout_width="wrap_content"
                        android:maxWidth="300dp"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Large2.Bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Oren's hummuns Shop"/>
                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        style="@style/Plans.Text.Label.Large2.Bold"
                        android:maxLines="1"
                        android:text="•"/>
                    <TextView
                        android:id="@+id/tv_placeMile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        style="@style/Plans.Text.Label.Large2.Bold"
                        android:text="0.51 Mile"
                        android:maxLines="1"
                        android:textColor="@color/teal_main"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_placeTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Plans.Text.Label.Small"
                    android:textColor="@color/gray_2"
                    android:text="Bakery • Store" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/gray_opacity20"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        style="@style/Plans.Text.Label.Medium2"
                        android:textColor="@color/purple_main"
                        android:text="ABOUT"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/purple_main"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_placeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_pin_map_green_large"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_placeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="17dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Plans.Text.Label.Large2"
                            android:gravity="center_vertical"
                            android:text="N/A"/>
                        <View
                            android:id="@+id/separator_placeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_opacity20"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_placePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_phone_green"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_placePhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="17dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Plans.Text.Label.Large2"
                            android:gravity="center_vertical"
                            android:text="N/A"/>
                        <View
                            android:id="@+id/separator_placePhone"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_opacity20"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_placeTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_calendar_green_large"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_placeTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="17dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Plans.Text.Label.Large2"
                            android:gravity="center_vertical"
                            android:text="N/A"/>
                        <View
                            android:id="@+id/separator_placeTime"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_opacity20"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_placeRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_star_green"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_placeRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="17dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Plans.Text.Label.Large2"
                            android:gravity="center_vertical"
                            android:text="N/A"/>
                        <View
                            android:id="@+id/separator_placeRating"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_opacity20"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_placeWebSite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_globe_green"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_placeWebSite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="17dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Plans.Text.Label.Large2"
                            android:gravity="center_vertical"
                            android:text="N/A"/>
                        <View
                            android:id="@+id/separator_placeWebSite"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_opacity20"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!-- TopBar -->
        <LinearLayout
            android:id="@+id/layoutTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">
            <View
                android:id="@+id/statusBar"
                android:tag="status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBar_height"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBar_height"
                android:orientation="horizontal"
                android:visibility="visible"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:id="@+id/btnBack"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_circle_black_opacity"/>
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_back_white"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Plans.TitleBar.Text.White"/>
                <LinearLayout
                    android:id="@+id/btn_createEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:paddingHorizontal="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/button_bkgnd_purple"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_createEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Plans.Text.Label.Medium2.White"
                        android:text='CREATE EVENT'/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>
