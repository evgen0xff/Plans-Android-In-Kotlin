<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.planscollective.plansapp.models.viewModels.InviteByLinkVM" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragment.event.InviteByLinkFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background">
            <View
                android:id="@+id/statusBar"
                android:tag="status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBar_height"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBar_height">
                <LinearLayout
                    android:id="@+id/btn_back"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_x_white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Plans.TitleBar.Text.White"
                    android:text="Invite By Link"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Share Link -->
        <LinearLayout
            android:id="@+id/layout_shareLink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="14dp"
                style="@style/Plans.Text.Label.Medium2"
                android:gravity="center"
                android:text="Copy and paste this link and share it in any way you would like to invite more friends"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Plans.Text.Label.Small"
                    android:textColor="@color/black"
                    android:text="Invite link" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:id="@+id/tv_shareLink"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Plans.Text.Label.Large2"
                        android:textColor="@color/purple_opacity54"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/btn_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="8dp"
                        style="@style/Plans.Text.Label.Medium2"
                        android:textColor="@color/purple_main"
                        android:gravity="center"
                        android:text="COPY"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_see_more"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_shareLink"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:layout_marginVertical="32dp"
                android:orientation="vertical"
                android:background="@drawable/button_bkgnd_purple"
                android:gravity="center"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Plans.Text.Label.Medium2.White"
                    android:text="SHARE LINK"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
