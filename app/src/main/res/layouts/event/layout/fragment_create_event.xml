<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.planscollective.plansapp.models.viewModels.CreateEventVM" />
    </data>

    <com.planscollective.plansapp.customUI.PlansInsetsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        tools:context=".fragment.event.CreateEventFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background">
            <View
                android:id="@+id/statusBar"
                android:tag="status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBar_height"/>
            <!-- TopBar -->
            <LinearLayout
                android:id="@+id/layoutTopBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBar_height"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/btnBack"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_x_white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Plans.TitleBar.Text.White"
                    android:text='New Event'/>
                <LinearLayout
                    android:id="@+id/btnMenu"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fillViewport="true"
                android:descendantFocusability="beforeDescendants">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/layout_eventCover"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="@drawable/bkgnd_gray_loading">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_camera_grey"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                style="@style/Plans.Text.Label.Small"
                                android:textColor="@color/gray_see_more"
                                android:text="Add Photo/Video"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/imgv_eventCover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:clickable="false"/>

                        <com.planscollective.plansapp.customUI.PlansVideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:clickable="false" />
                    </RelativeLayout>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/etEventName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Name"/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Details"
                        app:inputTypePlans="textMultiLine|textCapSentences"/>
                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginVertical="21dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingHorizontal="24dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_bkgnd_purple"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_continue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Plans.Text.Label.Medium2.White"
                            android:text='CONTINUE'/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/viewProgress"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:orientation="horizontal"
                        android:background="@color/gray">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/gradient_background"/>
                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </com.planscollective.plansapp.customUI.PlansInsetsLinearLayout>
</layout>
