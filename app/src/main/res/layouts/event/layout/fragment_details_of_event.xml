<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.planscollective.plansapp.models.viewModels.DetailsOfEventVM" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background"
        tools:context=".fragment.event.DetailsOfEventFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background">
            <View
                android:id="@+id/statusBar"
                android:tag="status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBar_height"/>
            <!-- TopBar -->
            <LinearLayout
                android:id="@+id/layoutTopBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBar_height"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/btnBack"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_back_white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Plans.TitleBar.Text.White"
                    android:text="Details"/>
                <LinearLayout
                    android:id="@+id/btnMenu"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:descendantFocusability="afterDescendants">
            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:elevation="5dp">
                    <LinearLayout
                        android:id="@+id/layout_caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_message_outline_green"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_caption"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginVertical="12dp"
                                android:layout_marginEnd="8dp"
                                style="@style/Plans.Text.Label.Large2"
                                android:autoLink="web"
                                android:textColorLink="@color/purple_opacity54"
                                android:lineSpacingExtra="3dp"
                                android:gravity="center_vertical"
                                android:text="The caption of Event"/>
                            <View
                                android:id="@+id/view_separatorCaption"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_clipboard_green_outline"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_description"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginVertical="12dp"
                                android:layout_marginEnd="8dp"
                                style="@style/Plans.Text.Label.Large2"
                                android:autoLink="web"
                                android:textColorLink="@color/purple_opacity54"
                                android:lineSpacingExtra="3dp"
                                android:gravity="center_vertical"
                                android:text="The description of Event"/>
                            <View
                                android:id="@+id/view_separatorDescription"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_locationName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_tag_outline_green"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_locationName"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginVertical="12dp"
                                android:layout_marginEnd="8dp"
                                style="@style/Plans.Text.Label.Large2"
                                android:lineSpacingExtra="3dp"
                                android:gravity="center_vertical"
                                android:text="Locatin Name"/>
                            <View
                                android:id="@+id/view_separatorLocationName"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_locationAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_pin_map_green_large"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_locationAddress"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginVertical="12dp"
                                android:layout_marginEnd="8dp"
                                style="@style/Plans.Text.Label.Large2"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="3dp"
                                android:text="Location Address"/>
                            <View
                                android:id="@+id/view_separatorLocationAddress"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/layout_direction"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="400dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_worldwide_grey"/>
                    <FrameLayout
                        android:id="@+id/layout_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                        <fragment
                            android:id="@+id/mapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:name="com.google.android.gms.maps.SupportMapFragment"/>
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/btn_myLocation"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_crosshair_circle_green"/>
                    <ImageView
                        android:id="@+id/btn_direction"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/im_directions_purple"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
