<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.planscollective.plansapp.models.viewModels.EditEventVM" />
    </data>

    <com.planscollective.plansapp.customUI.PlansInsetsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".fragment.event.EditEventFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background">
            <View
                android:id="@+id/statusBar"
                android:tag="status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBar_height"/>
            <!-- TopBar -->
            <LinearLayout
                android:id="@+id/layoutTopBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBar_height"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/btnBack"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_x_white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Plans.TitleBar.Text.White"
                    android:text='@{viewModel.isDuplicate ? "Duplicate Event" : "Edit Event"}'/>
                <LinearLayout
                    android:id="@+id/btnMenu"
                    android:orientation="horizontal"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/layout_eventCover"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="@drawable/bkgnd_gray_loading">
                        <ImageView
                            android:id="@+id/imgv_eventCover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:clickable="false"/>
                        <com.planscollective.plansapp.customUI.PlansVideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:clickable="false"/>
                    </RelativeLayout>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_eventName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Event"/>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Details"
                        app:inputTypePlans="textMultiLine|textCapSentences"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp">
                        <com.planscollective.plansapp.customUI.PlansEditTextView
                            android:id="@+id/et_startDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:hintText="Start Date"
                            app:enableClear="false"
                            app:isFocusableForEdit="false"/>
                        <com.planscollective.plansapp.customUI.PlansEditTextView
                            android:id="@+id/et_endDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            app:hintText="End Date"
                            app:enableClear="false"
                            app:isFocusableForEdit="false"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp">
                        <com.planscollective.plansapp.customUI.PlansEditTextView
                            android:id="@+id/et_startTime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:hintText="Start Time"
                            app:enableClear="false"
                            app:isFocusableForEdit="false"/>
                        <com.planscollective.plansapp.customUI.PlansEditTextView
                            android:id="@+id/et_endTime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            app:hintText="End Time"
                            app:enableClear="false"
                            app:isFocusableForEdit="false"/>
                    </LinearLayout>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Location"
                        app:enableClear="false"
                        app:isFocusableForEdit="false"
                        app:inputTypePlans="textMultiLine|textCapSentences"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Plans.Text.Label.Medium2.Bold"
                            android:textColor="@color/black"
                            android:text="Set Boundary" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_boundary"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            style="@style/Plans.Text.Label.Small"
                            android:textColor="@color/gray_2"
                            android:text="A guest will be live at your event once they arrive within the location boundary." />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="9dp"
                            app:cardElevation="0dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bkgnd_gray_loading_corner9">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_worldwide_grey"/>
                                <FrameLayout
                                    android:id="@+id/layout_map"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true">
                                    <fragment
                                        android:id="@+id/mapFragment"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:name="com.google.android.gms.maps.SupportMapFragment"/>
                                </FrameLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <com.planscollective.plansapp.customUI.PlansEditTextView
                        android:id="@+id/et_caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:hintText="Caption"
                        app:inputTypePlans="textMultiLine|textCapSentences"/>
                    <LinearLayout
                        android:id="@+id/layout_invitation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Plans.Text.Label.Medium2.Bold"
                            android:textColor="@color/black"
                            android:text="Invite People" />
                        <LinearLayout
                            android:id="@+id/layout_invitedFriends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imv_userImage1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_user_placeholder"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imv_userImage2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_user_placeholder"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imv_userImage3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_user_placeholder"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imv_userImage4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_users_circle_green"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvSelectedCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            style="@style/Plans.Text.Label.Small"
                            android:textColor="@color/gray_2"
                            android:text="Selected 2 friends." />
                        <TextView
                            android:id="@+id/tvRemovedCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Plans.Text.Label.Small"
                            android:textColor="@color/gray_2"
                            android:text="Removed 2 friends." />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Plans.Text.Label.Medium2.Bold"
                            android:textColor="@color/black"
                            android:text="Options" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">
                            <LinearLayout
                                android:id="@+id/layout_public"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:id="@+id/btn_public"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/selector_button_radio_purple" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Plans.Text.Label.Large2"
                                        android:gravity="center_vertical"
                                        android:text="Public"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        style="@style/Plans.Text.Label.Small"
                                        android:text="All your friends can view or join the event."
                                        android:textColor="@color/gray_2"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp">
                            <LinearLayout
                                android:id="@+id/layout_private"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/btn_private"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/selector_button_radio_purple" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Plans.Text.Label.Large2"
                                        android:gravity="center_vertical"
                                        android:text="Private"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        style="@style/Plans.Text.Label.Small"
                                        android:text="Only your invited friends can attend or view the event."
                                        android:textColor="@color/gray_2"/>
                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">
                            <LinearLayout
                                android:id="@+id/layout_groupChatOn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:id="@+id/btn_groupChatOn"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/selector_button_radio_purple" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Plans.Text.Label.Large2"
                                        android:gravity="center_vertical"
                                        android:text="Group Chat On"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp">
                            <LinearLayout
                                android:id="@+id/layout_groupChatOff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/btn_groupChatOff"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/selector_button_radio_purple" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="16dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Plans.Text.Label.Large2"
                                        android:gravity="center_vertical"
                                        android:text="Group Chat Off"/>
                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/gray_opacity20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_done"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginVertical="24dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingHorizontal="24dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_bkgnd_purple"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_done"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Plans.Text.Label.Medium2.White"
                            android:text='@{viewModel.isDuplicate ? "DUPLICATE EVENT" : "UPDATE EVENT"}'/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </com.planscollective.plansapp.customUI.PlansInsetsLinearLayout>
</layout>
