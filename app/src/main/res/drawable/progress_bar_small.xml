<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="600"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080" >

    <shape
        android:innerRadius="8dp"
        android:shape="ring"
        android:thickness="2dp"
        android:useLevel="false" >
        <size
            android:height="21dp"
            android:width="21dp" />

        <gradient
            android:startColor="#0038A39A"
            android:centerColor="#8038A39A"
            android:endColor="#ff38A39A"
            android:centerY="0.5"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>

